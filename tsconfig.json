{
  "compilerOptions": {
    "target": "ESNext", // Specify the target ECMAScript version
    "module": "CommonJS", // Specify module code generation
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of source files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable compatibility with CommonJS imports
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false, // Disable strict property initialization checks
    "resolveJsonModule": true // Enable importing JSON modules
  },
  "include": ["src/**/*.ts", "generate-license-report.ts"], // Specify the files to include in compilation
  "exclude": ["node_modules"] // Specify files/exclude patterns to be ignored
}
